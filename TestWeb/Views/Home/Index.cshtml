@model ClientGenderViewModel

<form method="post">
    <div class="card h-200 align-items-center">
        <div class="card-body d-flex flex-column justify-content-center align-items-stretch">
            <h1 class="display-2 bs-success h-color mt-auto"><span class="ion ion-ios-tablet-portrait-outline"></span></h1>
            <div d-flex justify-content-center>
                <h1 class="card-title h-color mt-auto text-center">Диагностика заболеваний</h1>
                <p class="card-text mt-auto">Расскажите, что вас беспокоит, и мы поможем определить заболевание. Это займет около 10 минут.</p>
            </div>
            <div class="form-group row mt-4 d-flex justify-content-center">
                <label asp-for="Name" class="col-md-2 col-form-label text-muted">Имя</label>
                <div class="col-md-4">
                    <input asp-for="Name" class="form-control" type="text" placeholder="Иван" required>
                </div>
            </div>
            <div class="form-group row mt-2 d-flex justify-content-center">
                <label asp-for="Age" class="col-md-2 col-form-label text-muted">Возраст</label>
                <div class="col-md-4">
                    <input asp-for="Age" class="form-control" type="number" placeholder="18" required>
                </div>
            </div>
            <div class="form-group row mt-2 d-flex justify-content-center">



                <div class="form-group row mt-2 d-flex justify-content-center">
                    <label asp-for="GenderId" class="col-md-2 col-form-label text-muted">Пол</label>
                    <div class="col-md-4">
                        <select asp-for="GenderId" class="form-select form-control" required>
                            <option value="@Model.AllGenders.FirstOrDefault().GenderId">@Model.AllGenders.FirstOrDefault().Name</option>
                            <option value="@Model.AllGenders.LastOrDefault().GenderId">@Model.AllGenders.LastOrDefault().Name</option>
                        </select>
                        <div class="invalid-feedback">
                            Выберите пол
                        </div>
                    </div>
                </div>

                @*
                    <label asp-for="Client.GenderId" class="col-md-2 col-form-label form-control-label text-muted">Пол</label>
                    <div class="col-md-4 mt-2">
                    <div class="form-check form-check-inline">
                    <input asp-validation-for="Client.GenderId" class=" form-control" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="@Model.AllGenders.FirstOrDefault().GenderId" required>
                    <label class="form-check-label" for="inlineRadio1">мужской</label>
                    </div>
                    <div class="form-check form-check-inline">
                    <input asp-validation-for="Client.GenderId" class="form-control" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="@Model.AllGenders.LastOrDefault().GenderId" required>
                    <label class="form-check-label" for="inlineRadio2">женский</label>
                    </div>
                    </div>*@
            </div>
            <button type="submit" asp-controller="Home" asp-action="Index" class="btn btn-secondary border mt-4 mb-4">Проверить симптомы</button>


        </div>
    </div>
</form>

